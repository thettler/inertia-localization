{
    "name": "thettler/inertia-localization",
    "description": "This is my package inertia-localization",
    "keywords": [
        "thettler",
        "laravel",
        "inertiajs",
        "localization",
        "translations",
        "inertia-localization"
    ],
    "homepage": "https://github.com/thettler/inertia-localization",
    "license": "MIT",
    "authors": [
        {
            "name": "Tobias Hettler",
            "email": "tobias.hettler@bitbench.dev",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.4||^8.3",
        "spatie/laravel-package-tools": "^1.16",
        "illuminate/contracts": "^10.0||^11.0||^12.0"
    },
    "require-dev": {
        "laravel/pint": "^1.14",
        "nunomaduro/collision": "^8.1.1||^7.10.0",
        "larastan/larastan": "^2.9||^3.0",
        "orchestra/testbench": "^10.0.0||^9.0.0||8.35.1",
        "pestphp/pest": "^3.0||^2.0",
        "pestphp/pest-plugin-arch": "^3.0||^2.0",
        "pestphp/pest-plugin-laravel": "^3.0||^2.0",
        "phpstan/extension-installer": "^1.3||^2.0",
        "phpstan/phpstan-deprecation-rules": "^1.1||^2.0",
        "phpstan/phpstan-phpunit": "^1.3||^2.0"
    },
    "autoload": {
        "psr-4": {
            "Thettler\\InertiaLocalization\\": "src/",
            "Thettler\\InertiaLocalization\\Database\\Factories\\": "database/factories/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Thettler\\InertiaLocalization\\Tests\\": "tests/",
            "Workbench\\App\\": "workbench/app/"
        }
    },
    "scripts": {
        "post-autoload-dump": "@composer run prepare",
        "prepare": "@php vendor/bin/testbench package:discover --ansi",
        "analyse": "vendor/bin/phpstan analyse",
        "test": "vendor/bin/pest",
        "test-coverage": "vendor/bin/pest --coverage",
        "format": "vendor/bin/pint"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "phpstan/extension-installer": true
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Thettler\\InertiaLocalization\\InertiaLocalizationServiceProvider"
            ],
            "aliases": {
                "InertiaLocalization": "Thettler\\InertiaLocalization\\Facades\\InertiaLocalization"
            }
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
